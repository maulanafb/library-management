datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Book {
  id          Int      @id @default(autoincrement())
  title       String
  author      String
  description String
  pages       Int
  coverImage  String
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}
